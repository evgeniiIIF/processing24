extends ../../sys/pug/main.pug

block variables
	- var title = 'processing24';
	- var description = 'Топливные карты';
	//- - var pageClass = 'show-sidebar';
	
block content
	main.main
		section.quick-order
			.container
				h1.quick-order__title Доставка топлива
				form.quick-order__form.form-quick-order.card(action="#", method="post")
					h3.form-quick-order__title Быстрый заказ топлива
					.form-quick-order__row 
						.form-quick-order__name
							+field({
								label: 'Ваше имя',
								type: 'text',
								name: 'text-field',
								placeholder: 'Имя',
								tabindex: 1,
								required: true,
							})
						.form-quick-order__phone
							+input-mask({
								label: 'Номер телефона',
								type: 'tel',
								name: 'phone-field',
								placeholder: '+7 (___) ___-__-__',
								tabindex: 1,
								required: true,
							})
						.form-quick-order__button
							+button-color({
								text: 'Заказать топливо',
							})
					.form-quick-order__confirm
						+item-checkbox({
							text: 'Я согласен с условиями обработки данных', isChecked: false
						})
		section.price
			.container
				h2.price__title Стоимость топлива
				.price__table
					+table-1()
		section.fuel-order
			.container
				h2.fuel-order__title Топливо с доставкой
				form.fuel-order__form
					.fuel-order__fields.fields-fuel-order
						+select({
							js: true, 
							readonly: true,
							dropdownId: 'select1',
							name: 'type-of-fuel',
							label: 'Вид топлива', 
							type: 'text', 
							placeholder: 'Вид топлива', 
							tabindex: 1,
							arrowSvg: {
								id:'#expand-more',
								width: 13,
								height: 8,
							},
							selectItems:[
								'дт',
								'аи-95'
							]
						})
						+range-slider-one({  
							label: 'Объем топлива',
							type: 'text',
							name: 'quantity-fuel',
							placeholder: 'Объем топлива',
							tabindex: 1,
							required: true,
						})
						+field({
							label: 'Место доставки',
							type: 'text',
							name: 'delivery-place',
							placeholder: 'Адрес',
							tabindex: 1,
							required: true,
						})
						+field({
							label: 'Ваше имя',
							type: 'text',
							name: 'name',
							placeholder: 'Имя',
							tabindex: 1,
							required: true,
						})
						+input-mask({
							label: 'Номер телефона',
							type: 'tel',
							name: 'phone-field',
							placeholder: '+7 (___) ___-__-__',
							tabindex: 1,
							required: true,
						})
					.fuel-order__result.result-fuel-order.card
						.result-fuel-order__field
							h5.result-fuel-order__title Итого
						.result-fuel-order__field
							+title-text({
								title: 'Стоимость топлива'
							})
							.result-fuel-order__cost 77 350.00 ₽
						.result-fuel-order__field
							+title-text({
								title: 'Цена за литр:',
								text: 'Цена и стоимость указаны ориентировочно. Точные цену и стоимость собщит наш менеджер при подтверждении заявки.'
							})
							.result-fuel-order__cost 45.50 ₽
						.result-fuel-order__field
							+title-text({
								title: 'Выгода:',
								text: 'При цене на АЗС  49.59 ₽  за литр, цены актуальны на  23.11.2020 г.'
							})
							.result-fuel-order__total-cost 6 953.00 ₽
						.result-fuel-order__button
							.result-fuel-order__button-wrapper
								+button-color({
									text: 'Заказать топливо',
								})
		section.blue-cards
			.container
				h2.blue-cards__title Как мы работаем
				.blue-cards__row
					.blue-cards__column
						.blue-cards__item.card-blue
							.card-blue__top
								img.card-blue__icon(src=require("../../assets/img/cards-blue/clickcard-blue.png"), alt="click")
								.card-blue__duration
									.card-blue__duration-text 1-3 мин.
									img.card-blue__duration-arrow(src=require("../../assets/img/cards-blue/Vector 3.png"), alt="arrow")
							.card-blue__content
								h4.card-blue__content-title Оформление заявки
								p.card-blue__content-text Заполните заявку на сайте, укажите удобное для вас место приезда заправщика, сорт и количество топлива, которое хотите купить

					.blue-cards__column
						.blue-cards__item.card-blue
							.card-blue__top
								img.card-blue__icon(src=require("../../assets/img/cards-blue/phonecard-blue.png"), alt="phone")
								.card-blue__duration
									.card-blue__duration-text 1-3 мин.
									img.card-blue__duration-arrow(src=require("../../assets/img/cards-blue/Vector 3.png"), alt="arrow")
							.card-blue__content
								h4.card-blue__content-title Подтверждение заявки менеджером
								p.card-blue__content-text Дождитесь звонка нашего менеджера для уточнения условий заказа

					.blue-cards__column
						.blue-cards__item.card-blue
							.card-blue__top
								img.card-blue__icon(src=require("../../assets/img/cards-blue/gascard-blue.png"), alt="oil")
								.card-blue__duration
									.card-blue__duration-text 30-90 мин.
							.card-blue__content
								h4.card-blue__content-title Заправка вашего автомобиля
								p.card-blue__content-text В назначенное время приедет заправщик и заправит автомобиль топливом. <span> Если у заказчика есть действующий договор на топливные карты, то при оплате можно провести транзакцию через терминал. Переносное устройство есть у каждого заправщика</span>
